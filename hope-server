-- üåê WALVY SERVERHOP AUTO LOOP
-- otomatis mencari server lain sampai berhasil teleport

local HttpService = game:GetService("HttpService")
local TeleportService = game:GetService("TeleportService")
local Players = game:GetService("Players")

local PlaceID = game.PlaceId
local JobID = game.JobId

local function GetServers(cursor)
    local url = "https://games.roblox.com/v1/games/" .. PlaceID .. "/servers/Public?sortOrder=Asc&limit=100"
    if cursor then
        url = url .. "&cursor=" .. cursor
    end
    local response = game:HttpGet(url)
    return HttpService:JSONDecode(response)
end

local function ServerHop()
    local cursor
    while true do
        local success, servers = pcall(function()
            return GetServers(cursor)
        end)

        if success and servers and servers.data then
            for _, server in ipairs(servers.data) do
                if server.playing < server.maxPlayers and server.id ~= JobID then
                    print("üåç Hopping ke server: " .. server.id)
                    TeleportService:TeleportToPlaceInstance(PlaceID, server.id, Players.LocalPlayer)
                    wait(5) -- tunggu sebentar, kalau gagal lanjut
                end
            end
            cursor = servers.nextPageCursor
            if not cursor then
                cursor = nil -- reset biar balik ke halaman pertama
            end
        else
            warn("‚ö†Ô∏è Gagal ambil daftar server, retry...")
        end

        task.wait(2) -- delay biar ga spam request
    end
end

ServerHop()
